@model Ksiegarnia.Models.Book

@{
    ViewData["Title"] = "Szczegóły";
}

<h1 class="mb-4">Szczegóły książki</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Informacje o książce</h4>
        <hr />

        <div class="row">
            <div class="col-sm-2">
                <strong>@Html.DisplayNameFor(model => model.Title):</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-sm-2">
                <strong>@Html.DisplayNameFor(model => model.Author):</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Author.Name)
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-sm-2">
                <strong>@Html.DisplayNameFor(model => model.ISBN):</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.ISBN)
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-sm-2">
                <strong>@Html.DisplayNameFor(model => model.Price):</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Price, "{0:C}")
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-sm-2">
                <strong>@Html.DisplayNameFor(model => model.Description):</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-sm-2">
                <strong>@Html.DisplayNameFor(model => model.Genre):</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.Genre.Name)
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-sm-2">
                <strong>@Html.DisplayNameFor(model => model.PublicationYear):</strong>
            </div>
            <div class="col-sm-10">
                @Html.DisplayFor(model => model.PublicationYear)
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <div class="btn-group" role="group">
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a>
        }
        <a class="btn btn-secondary" asp-action="Index">Powrót do listy</a>
    </div>
</div>
